<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorBackgroundNextOfKinItem"
        app:cardCornerRadius="@dimen/radius_statusbox"
        app:cardElevation="@dimen/elevation_entire">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_item_next_of_kin">

            <TextView
                android:id="@+id/text_name_nok_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next_of_kin_name"
                style="@style/NextOfKinItemNameText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_phone_nok_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next_of_kin_phone"
                style="@style/NextOfKinItemPhoneText"
                app:layout_constraintBottom_toBottomOf="@+id/text_name_nok_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_name_nok_item" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>