<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>

        <!--custom font-family 적용-->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>
    </style>

    <!-- For Splash Screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
    </style>

    <style name="TitleText" parent="MajorText">
        <item name="android:textColor">@color/colorPlainText</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">9sp</item>
    </style>

    <style name="MajorText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorPlainText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="MajorInputText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorPlainText</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textFontWeight">700</item>
        <item name="fontFamily">@font/notosans_font_family</item>
    </style>

    <style name="PlainText" parent="MajorText">
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="MinorText" parent="MajorText">
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="NoticeText" parent="MajorText">
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SmallTimeText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorMainGreen</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="SeeMoreButton" parent="TextButton">
        <item name="android:text">@string/see_more</item>
        <item name="android:padding">@dimen/margin_entire_padding_horizontal</item>
    </style>

    <style name="TextButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorPlainText</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="SearchAddressButton" parent="TextButton">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">@dimen/margin_profile_value_top</item>
        <item name="android:paddingBottom">@dimen/margin_profile_value_top</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="NextOfKinItemNameText" parent="MajorText">
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="NextOfKinItemPhoneText" parent="MajorText">
        <item name="android:textFontWeight">100</item>
    </style>
    
    <style name="InputBoxCategoryText" parent="MajorText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="InputBoxExtraAddressCategoryText" parent="MajorText">
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="InputBoxExtraAddressCategoryEditText" parent="MajorInputText">
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="InputBoxValueText" parent="MajorText">
        <item name="android:textFontWeight">400</item>
        <item name="android:background">@drawable/background_round_rectangle_5dp</item>
        <item name="android:backgroundTint">@color/colorProfileValueBackground</item>
        <item name="android:layout_marginTop">@dimen/margin_profile_value_top</item>
        <item name="android:paddingStart">@dimen/padding_profile_value_horizontal</item>
        <item name="android:paddingEnd">@dimen/padding_profile_value_horizontal</item>
        <item name="android:paddingTop">@dimen/padding_profile_value_vertical</item>
        <item name="android:paddingBottom">@dimen/padding_profile_value_vertical</item>
    </style>

    <style name="InputBoxValueEditText" parent="MajorInputText">
        <item name="android:textFontWeight">400</item>
        <item name="android:background">@drawable/background_round_rectangle_5dp</item>
        <item name="android:backgroundTint">@color/colorProfileValueBackground</item>
        <item name="android:layout_marginTop">@dimen/margin_profile_value_top</item>
        <item name="android:paddingStart">@dimen/padding_profile_value_horizontal</item>
        <item name="android:paddingEnd">@dimen/padding_profile_value_horizontal</item>
        <item name="android:paddingTop">@dimen/padding_profile_value_vertical</item>
        <item name="android:paddingBottom">@dimen/padding_profile_value_vertical</item>
    </style>

    <style name="BottomButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_bottom_button</item>
        <item name="android:background">@drawable/background_round_rectangle_5dp</item>
        <item name="android:backgroundTint">@color/colorMainGreen</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:layout_marginStart">@dimen/margin_entire_padding_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/margin_entire_padding_horizontal</item>
        <item name="android:elevation">@dimen/elevation_entire</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_button_bottom</item>
    </style>

    <style name="RegisterButtonWhite" parent="TextAppearance.AppCompat.Button">
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:paddingTop">@dimen/padding_register_button_vertical</item>
        <item name="android:paddingBottom">@dimen/padding_register_button_vertical</item>
        <item name="android:paddingStart">@dimen/padding_register_button_horizontal</item>
        <item name="android:paddingEnd">@dimen/padding_register_button_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorMainGreen</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:text">@string/register_button</item>
        <item name="android:background">@drawable/background_round_rectangle_5dp</item>
        <item name="android:textFontWeight">700</item>
    </style>
    
    <style name="RegisterButtonGray" parent="RegisterButtonWhite">
        <item name="backgroundTint">@color/colorRegisterButtonGray</item>
        <item name="android:textColor">@color/colorPlainText</item>
    </style>

    <style name="BackButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:foreground">@drawable/custom_ripple_oval</item>
        <item name="android:paddingStart">@dimen/margin_entire_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/margin_entire_padding_horizontal</item>
        <item name="android:src">@drawable/ic_sensor_ic_back</item>
        <item name="android:tint">@color/colorPlainText</item>
    </style>

    <style name="BluetoothOnButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_marginBottom">@dimen/margin_statusbox_bluetooth_button_bottom</item>
        <item name="android:background">@drawable/background_round_rectangle_5dp</item>
        <item name="android:backgroundTint">@color/colorMainGreen</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">@dimen/padding_statusbox_bluetooth_button_horizontal</item>
        <item name="android:paddingEnd">@dimen/padding_statusbox_bluetooth_button_horizontal</item>
        <item name="android:paddingTop">@dimen/padding_statusbox_bluetooth_button_vertical</item>
        <item name="android:paddingBottom">@dimen/padding_statusbox_bluetooth_button_vertical</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="DialogTitleText" parent="MajorText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="DialogButtonText" parent="MajorText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarRightTextButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:textFontWeight">400</item>
        <item name="android:background">@null</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/colorMainGreen</item>
        <item name="android:textSize">15sp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

</resources>
